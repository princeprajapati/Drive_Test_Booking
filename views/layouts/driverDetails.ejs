<h2 style="text-align:center; padding: 10px; margin: 10px;"><%= driverDetails.fname %>'s Profile</h2>
<main class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="main">
          <div class="container">
            <div class="signup-content">
              <div class="signup-img">
                <img src="images/signup-img.jpg" alt="" />
              </div>
              <div class="signup-form">
                <h3>Perosonal Details</h3>
                <form class="requires-validation" id="form-validation" novalidate autocomplete="off" method="POST"
                  action="/dataupdate/<%= driverDetails._id %>">
                  <div class="col-md-12 mb-3">
                    <label for="fname">First Name</label>
                    <input class="form-control" type="text" name="fname" id="fname" value="<%= driverDetails.fname %>"
                      disabled />
                    <div class="invalid-feedback">First name is required.</div>
                  </div>
                  <div class="col-md-12 mb-3">
                    <label for="lname">Last Name</label>
                    <input class="form-control" type="text" name="lname" id="lname" value="<%= driverDetails.lname %>"
                      disabled />
                    <div class="invalid-feedback">Last name is required.</div>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="licensenumber">License Number</label>
                    <input class="form-control" type="text" name="licensenumber" id="licensenumber"
                      value="<%= driverDetails.licensenumber %>" minlength="8" maxlength="8" disabled />
                    <div class="invalid-feedback">
                      License number is not matched.
                    </div>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="age">Age</label>
                    <input class="form-control" type="number" name="age" id="age" value="<%= driverDetails.age %>" min="16"
                      disabled />
                    <div class="invalid-feedback">Age is required.</div>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="dob">Date of Birth</label>
                    <input class="form-control" type="date" name="dob" id="dob"
                      value="<%= driverDetails.dob.toISOString().split('T')[0] %>" min="2006-01-01" disabled />
                    <div class="invalid-feedback">DOB is required.</div>
                  </div>
                  <br>
                  <h3>Car Details</h3>
                  <br>
                  <div class="col-md-12 mb-3">
                    <label for="make">Car Make</label>
                    <input class="form-control" type="text" name="make" id="make"
                      value="<%= driverDetails.car_details.make %>" />
                    <div class="invalid-feedback">Car make is required.</div>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="model">Car Model</label>
                    <input class="form-control" type="text" name="model" id="model"
                      value="<%= driverDetails.car_details.model %>" />
                    <div class="invalid-feedback">Car model is required.</div>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="year">Car Year</label>
                    <input class="form-control" type="number" name="year" id="year"
                      value="<%= driverDetails.car_details.year %>" min="1990" max="2022" />
                    <div class="invalid-feedback">Car year is required.</div>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="platnumber">Plat Number</label>
                    <input class="form-control" type="text" name="platno" id="platno"
                      value="<%= driverDetails.car_details.platno %>" />
                    <div class="invalid-feedback">Plat Number is required.</div>
                  </div>

                  <div class="form-button mt-3">
                    <input id="submit" type="submit" class="btn btn-primary" value="Update" />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>